############################################################
# Apache config for static Nuxt site (IONOS/Apache + Cloudflare)
############################################################

# Enable rewriting
RewriteEngine On

# 1) Canonical domain: redirect www -> apex
RewriteCond %{HTTP_HOST} ^www\.steegmuellertransporte\.de$ [NC]
RewriteRule ^ https://steegmuellertransporte.de%{REQUEST_URI} [L,R=301]

# 2) Force HTTPS without breaking Cloudflare (checks X-Forwarded-Proto)
RewriteCond %{HTTPS} !=on
RewriteCond %{HTTP:X-Forwarded-Proto} !https [OR]
RewriteCond %{HTTP:CF-Visitor} !\{"scheme":"https"\}
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3) SPA/Static fallback: if no file/dir exists, serve 200.html
#    (Nuxt static preset emits 200.html for client routing)
Options -MultiViews
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ /200.html [L]

# 4) Compression (Gzip/Brotli when available)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/plain text/html text/css text/xml application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript application/json image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css text/xml application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript application/json image/svg+xml
</IfModule>
Header append Vary Accept-Encoding

# 5) Caching (origin hints; Cloudflare may override at edge)
<IfModule mod_expires.c>
  ExpiresActive On
  # Hashed assets (long cache)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  # Regular images (shorter cache)
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
</IfModule>

# 6) MIME types
AddType application/manifest+json .webmanifest
AddType image/avif .avif
AddType image/webp .webp

# 7) Security headers (safe defaults)
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "DENY"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  # HSTS (enable only after confirming HTTPS works everywhere)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# 8) Error pages
ErrorDocument 404 /404.html

# 9) SEO-friendly redirects for old URLs (if any)
# RewriteRule ^old-page$ /new-page [R=301,L]

# 10) Prevent access to sensitive files
<FilesMatch "\.(env|log|bak|backup|sql|conf)$">
  Require all denied
</FilesMatch>

# 11) Remove trailing slashes for better SEO
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} \s/+([^\s\?]*)/[\?\s] [NC]
RewriteRule ^ /%1 [R=301,L]
